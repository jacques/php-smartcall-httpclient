<?xml version="1.0"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" backupGlobals="false" colors="true" bootstrap="./bootstrap.php" xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/11.4/phpunit.xsd" cacheDirectory=".phpunit.cache" backupStaticProperties="false">
  <coverage>
    <report>
      <html outputDirectory="../build/coverage"/>
    </report>
  </coverage>
  <testsuite name="SmartCall HTTP Client Test Suite">
    <directory>./</directory>
  </testsuite>
  <logging/>
  <groups>
    <exclude>
      <group>exclude</group>
      <group>onlinetest</group>
      <group>donttest</group>
      <group>functional</group>
    </exclude>
  </groups>
  <source>
    <include>
      <directory suffix=".php">../src/</directory>
    </include>
  </source>
</phpunit>
